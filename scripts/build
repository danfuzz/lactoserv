#!/bin/bash
#
# Copyright 2022 Dan Bornstein. All rights reserved.
# All code and assets are considered proprietary and unlicensed.

. "$(dirname "$(readlink -f "$0")")/lib/init.sh" || exit "$?"

#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} [<opt> ...]
      Builds the project.

    --out=<dir>
      Directory where built output goes. Defaults to `out` directly under the
      main product directory.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$@"
}

# Want help?
opt-action --call='{ usage }' help/h

# Built output directory.
opt-value --var=outDir out

process-args "$@" || usage "$?"


#
# Main script
#

baseDir="$(dirname "$(this-cmd-dir)")"
srcDir="${baseDir}/src"
etcDir="${baseDir}/etc"

if [[ ${outDir} == '' ]]; then
    outDir="${baseDir}/out"
fi

mkdir -p "${outDir}" \
|| exit "$?"

# Copy the top-level code.
(
    cd "${srcDir}"
    find . -name pkg -prune -o -type f -name '*.js' -exec \
        cp '{}' "${outDir}/{}" ';'
)

# Create tarballs of each local package.

packageSrcDir="${srcDir}/pkg"
localPackages=($(
    cd "${packageSrcDir}"
    find . -mindepth 2 -maxdepth 2 -name package.json | awk -F/ '{ print $2 }' | sort
))

packageDestDir="${outDir}/local-packages"
mkdir -p "${packageDestDir}"
for p in "${localPackages[@]}"; do
    echo "Tarring ${p}..."
    (
        cd "${packageSrcDir}/${p}"
        # The JSON output from `npm pack` is wrapped in a top-level array
        # (because some invocations can emit multiple packages), but it's
        # superfluous here, so unwrap.
        npm pack --json --pack-destination="${packageDestDir}" \
        | jval --input=read '.[0]' >"${packageDestDir}/${p}.json"
    ) \
    || exit "$?"
done

# Copy over main `package.json`, adding a top-level dependency on each of the
# local packages, pointing to the tarballs we just made.

# Pull the package name and file out of each of the info files, and combine into
# a single object.
localDependencies="$(
    (
        for p in "${localPackages[@]}";  do
            jget --file="${packageDestDir}/${p}.json" \
            '
            (
                .filename
                    | sub("^@(?<scope>[^/]+)/(?<name>.*)$"; .scope + "-" + .name))
                as $filename
            | { (.name): $filename }
            '
        done
    ) | jq --slurp 'reduce .[] as $item ({}; . + $item)'
)"

# Inject the dependencies!
jget >"${outDir}/package.json" --file="${srcDir}/package.json" \
    dir='local-packages' \
    localDependencies:json="${localDependencies}" \
'
if .dependencies == null then .dependencies = {} else . end
|
.dependencies += ($localDependencies | map_values("file:" + $dir + "/" + .))
'

# Remove any local packages from the `node_modules` directory, to force them to
# get re-copied (because their code might have changed).
for p in "${localPackages[@]}"; do
    name="$(jget --file="${packageDestDir}/${p}.json" --output=raw '.name')"
    path="${outDir}/node_modules/${name}"
    if [[ -e ${path} ]]; then
        echo "Removing code for ${name}, for rebuild..."
        rm -rf "${path}"
    fi
done

# Let `npm` do its thing.

(
    cd "${outDir}"
    npm install \
    || exit "$?"
)

# Copy over the script binaries.
mkdir -p "${outDir}/bin"
(
    cd "${etcDir}/bin-src"
    find . -type f \
        -exec cp '{}' "${outDir}/bin/{}" ';' \
        -exec chmod 755 "${outDir}/bin/{}" ';'
)

# Clean things up a bit.

# Remove defunct package info files. Kinda cheesy: Take the list of currently-
# valid names and the list of all the ones that are in the package output
# directory, and remove all of the names that don't appear twice.
defunct=($(
    (
        printf '%s\n' "${localPackages[@]}"
        find "${packageDestDir}" -name '*.json' -exec basename '{}' '.json' ';'
    ) | sort | uniq -c | awk '$1 != 2 { print $2 }'
))
for d in "${defunct[@]}"; do
    echo "Removing defunct local package info for ${d}..."
    rm -f "${packageDestDir}/${d}.json"
done

# Remove defunct local package `tgz` files. Similar -- and similarly cheesy --
# logic to the package info file cleanup above.
defunct=($(
    (
        jget --output=raw "${localDependencies}" \
            'to_entries | map(.value) | .[]'
        find "${packageDestDir}" -name '*.tgz' -exec basename '{}' ';'
    ) | sort | uniq -c | awk '$1 != 2 { print $2 }'
))
for d in "${defunct[@]}"; do
    echo "Removing defunct local package ${d}..."
    rm -f "${packageDestDir}/${d}"
done

echo ''
echo 'Build complete!'
