# Figure out the symlink-resolved program name and directory.
cmdName="$(readlink -f "$0")" || exit "$?"
cmdDir="${cmdName%/*}"
cmdName="${cmdName##*/}"
baseDir="${cmdDir%/*}"

# Call through to the `jest` that got built by the main Jest dependency.
exec "${baseDir}/lib/node_modules/.bin/jest" \
    "$@"
